%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :name
    = f.text_field :name, autofocus: true, class: 'form-control'
  .field
    = f.label :email
    = f.email_field :email, autofocus: true, class: 'form-control'
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    = f.password_field :password, autocomplete: "off", class: 'form-control', id: 'txtNewPassword'
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', id: 'txtConfirmPassword', onChange: "checkPasswordMatch()"
  #divCheckPasswordMatch.registrationFormAlert
  .actions
    = f.submit "Sign up", id: 'btnSignUp'
= render "devise/shared/links"
