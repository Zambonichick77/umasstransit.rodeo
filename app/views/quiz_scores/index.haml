.quiz_scores.container
  %h1 Quiz Scores
  %hr

  %table.quiz_scores
    %tr
      %th Participant
      %th Points achieved
      %th Total points
      %th
    - @participants.each do |participant|
      = form_for QuizScore.find_or_initialize_by(participant: participant), class: 'form-inline' do |f|
        %tr
          %td
            #{participant.name} (#{participant.number})
            = f.hidden_field :participant_id, value: participant.id
          %td= f.number_field :points_achieved, placeholder: 'Enter a score...', class: 'form-control'
          %td= f.number_field :total_points, value: QuizScore::TOTAL_POINTS_DEFAULT, class: 'form-control'
          %td= f.submit 'Save score', class: 'btn btn-primary'
